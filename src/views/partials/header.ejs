<header
  class="h-18 flex items-center justify-center border-b border-zinc-200 relative"
>
  <!-- sidebar toggler -->
  <button
    id="sidebar-toggler"
    class="sm:hidden absolute top-1/2 left-4 -translate-y-1/2 size-6 cursor-pointer text-zinc-700"
    aria-label="Toggle navigation menu"
    aria-expanded="false"
    aria-controls="sidebar"
    type="button"
  >
    <%- include('./icons/menu') %>
  </button>

  <!-- logo -->
  <span class="block size-10" aria-hidden="true">
    <%- include('./icons/logo') %>
  </span>
</header>
