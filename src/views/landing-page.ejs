<div class="min-h-screen flex flex-col justify-between">
  <div
    class="flex flex-col items-center justify-center w-full max-w-100 mx-auto flex-1 px-5"
  >
    <span
      role="img"
      aria-label="Members Only logo"
      class="block size-30 md:-mt-20"
      aria-hidden="true"
    >
      <%- include('partials/icons/logo') %>
    </span>

    <h1 class="text-3xl sm:text-5xl font-bold text-zinc-950 mt-6 mb-1">
      Members Only
    </h1>

    <p class="text-zinc-700 font-semibold text-xl">What's up?</p>
    <div class="flex flex-col items-center gap-3 w-full mt-8">
      <a
        href="/auth/register"
        class="w-full text-center bg-sky-500 py-3 outline-none text-white font-semibold rounded-md cursor-pointer transition-colors duration-200 hover:bg-sky-400 focus:ring-2 focus:ring-offset-1 focus:ring-zinc-400"
      >
        Create account
      </a>
      <a
        href="/auth/login"
        class="w-full text-center bg-zinc-200 py-3 outline-none text-zinc-950 font-semibold rounded-md cursor-pointer transition-colors duration-200 hover:bg-zinc-300 focus:ring-2 focus:ring-offset-1 focus:ring-zinc-400"
      >
        Sign in
      </a>
    </div>
  </div>
  <!-- footer -->
  <%- include('partials/footer') %>
</div>
