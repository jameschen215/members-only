<div class="mt-14 py-16 min-h-[calc(100vh-56px)] border-x border-zinc-200 px-5">
  <div class="w-full max-w-90 mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl sm:text-5xl font-bold text-center">New Post</h1>
    </div>

    <form
      id="create-form"
      action="/messages/create"
      method="post"
      class="space-y-4"
      novalidate
      data-errors="<%= JSON.stringify(locals.errors) || {} %>"
    >
      <div class="flex flex-col">
        <label
          for="title"
          class="capitalize text-sm font-medium text-zinc-700 mb-2"
        >
          title
        </label>
        <input
          type="text"
          id="title"
          name="title"
          value="<%= locals.oldInput?.title || '' %>"
          aria-required="true"
          required
          class="border border-zinc-200 rounded-sm px-3 py-2 outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-50 transition-colors duration-200"
        />
      </div>

      <div class="flex flex-col">
        <label
          for="content"
          class="capitalize text-sm font-medium text-zinc-700 mb-2"
        >
          Content
        </label>
        <textarea
          id="content"
          name="content"
          aria-required="true"
          placeholder="What's up?"
          rows="8"
          required
          class="border border-zinc-200 rounded-sm px-3 py-2 outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-50 transition-colors duration-200"
        >
<%= locals.oldInput?.content || '' %></textarea
        >
      </div>

      <div class="flex gap-2">
        <button
          type="button"
          class="w-full bg-zinc-100 py-2 outline-none text-zinc-950 font-semibold rounded-md cursor-pointer transition-colors duration-200 hover:bg-zinc-200 focus:ring-2 focus:ring-offset-1 focus:ring-zinc-400"
        >
          cancel
        </button>

        <button
          type="submit"
          class="w-full bg-sky-500 py-2 outline-none text-white font-semibold rounded-md cursor-pointer transition-colors duration-200 hover:bg-sky-400 focus:ring-2 focus:ring-offset-1 focus:ring-zinc-400 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Post
        </button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/scripts/create-form.js"></script>
