<div class="min-h-screen border-x border-zinc-200">
  <!-- header -->
  <header
    class="h-18 bg-zinc-50 py-2 px-1 sm:px-3 flex items-center gap-5 border-b border-zinc-200"
  >
    <button
      id="back-btn-on-upgrade"
      type="button"
      class="cursor-pointer hover:bg-zinc-200 size-10 p-2 rounded-lg text-zinc-700 transition-colors duration-200"
    >
      <%- include('partials/icons/arrow-left') %>
    </button>
    <!-- <h1 class="text-zinc-950 text-3xl">Join the club</h1> -->
  </header>

  <div class="w-full max-w-90 mx-auto">
    <div class="sm:my-12 my-8">
      <h1 class="text-3xl sm:text-5xl font-bold text-center">Join the club</h1>
    </div>

    <form
      id="upgrade-form"
      action="/auth/upgrade"
      method="post"
      class="space-y-8"
      novalidate
      data-errors="<%= JSON.stringify(locals.errors) || {} %>"
    >
      <div class="flex flex-col">
        <label
          for="secret_code"
          class="capitalize text-sm font-medium text-zinc-700 mb-2"
        >
          Secret code
        </label>
        <input
          type="password"
          id="secret_code"
          name="secret_code"
          value="<%= locals.oldInput?.secret_code || '' %>"
          aria-required="true"
          required
          class="border border-zinc-200 rounded-sm px-3 py-2 outline-none focus:border-sky-500 focus:ring-2 focus:ring-sky-50 transition-colors duration-200"
        />

        <p id="secret_code-help" class="text-sm text-zinc-500 mt-2">
          Please enter the secret code to join the club. You can get it by
          sending the author a direct message.
        </p>
      </div>

      <div>
        <button
          type="submit"
          class="w-full bg-sky-500 py-2 outline-none text-white font-semibold rounded-sm cursor-pointer transition-colors duration-200 hover:bg-sky-400 focus:ring-2 focus:ring-offset-1 focus:ring-sky-400 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/scripts/upgrade.js"></script>
